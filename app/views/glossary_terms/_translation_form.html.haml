- translation = glossary_term.glossary_term_translations.by_language(language.id).first
- translation ||= GlossaryTermTranslation.new
.form-group
  %h4 TERM TRANSLATION
  .col-sm-9.col-sm-offset-3
    = text_field_tag 'glossary_term[translation][term]', translation.term, class: 'form-control', autocomplete: 'off', placeholder: 'Term Translation'
  %label.col-sm-3.control-label Alternative
  .col-sm-9
    = text_field_tag 'glossary_term[translation][alt_term1]', translation.alt_term1, class: 'form-control', autocomplete: 'off', placeholder: 'Alternative Translation'
  %label.col-sm-3.control-label Alternative
  .col-sm-9
    = text_field_tag 'glossary_term[translation][alt_term2]', translation.alt_term2, class: 'form-control', autocomplete: 'off', placeholder: 'Alternative Translation'
  %label.col-sm-3.control-label Alternative
  .col-sm-9
    = text_field_tag 'glossary_term[translation][alt_term3]', translation.alt_term3, class: 'form-control', autocomplete: 'off', placeholder: 'Alternative Translation'

.form-group
  %h4 DEFINITION
  .col-sm-12
    = text_area_tag 'glossary_term[translation][definition]', translation.definition, class: 'form-control', rows: 5, autocomplete: 'off', placeholder: 'Definition'

.form-group
  %h4 NOTES
  .col-sm-12
    = text_area_tag 'glossary_term[translation][notes]', translation.notes, class: 'form-control', rows: 5, autocomplete: 'off', placeholder: 'Definition'


.form-group
  %h4 STATUS
  %label.col-sm-3.control-label Integration
  .col-sm-9
    = select_tag 'glossary_term[translation][integration_status_id]', model_to_select(IntegrationStatus, translation.integration_status_id), class: 'form-control', autocomplete: 'off'
