= render 'shared/term_alerts', language: language, term: item

.row-fluid
  .col-sm-6.col-xs-12

    - show_buttons = !request.xhr? && can_edit_language_glossary?(item.language_id)
    - if show_buttons
      .pull-left= render 'shared/changes_url', url: changes_language_glossary_name_path(language, item)

      = link_to edit_language_glossary_name_path(language, item), class: 'pull-right btn btn-primary btn-xs', id: :edit_name_button, remote: true, title: "Edit term" do
        %i.fa.fa-edit
        Edit
      = link_to 'javascript:void(0);', {class: 'pull-right btn btn-default btn-xs', id: :cancel_name_button, style: 'display: none;'} do
        %i.fa.fa-times
        Cancel


    %h4{class: (show_buttons ? 'term_title' : 'title')} PROPER NAME DETAILS
    #name-container.clearfix
      = render 'term', language: language, item: item

  .col-sm-6.col-xs-12
    - unless language.is_base_language?
      - translation = item.glossary_name_translations.by_language(language.id).first
      - translation ||= GlossaryNameTranslation.new_with_defaults

      - show_buttons = !translation.new_record? && !request.xhr? && can_edit_language_glossary?(language.id)
      - if show_buttons
        .pull-left= render 'shared/changes_url', url: changes_language_glossary_name_glossary_name_translation_path(language, item, translation)

        - url = translation.new_record? ? new_language_glossary_name_glossary_name_translation_path(language, item) : edit_language_glossary_name_glossary_name_translation_path(language, item, translation)
        = link_to url, class: 'pull-right btn btn-primary btn-xs', id: :edit_name_translation_button, remote: true, title: "Edit translation" do
          %i.fa.fa-edit
          Edit

        = link_to 'javascript:void(0);', {class: 'pull-right btn btn-default btn-xs', id: :cancel_name_translation_button, style: 'display: none;'} do
          %i.fa.fa-times
          Cancel

      %h4{class: (show_buttons ? 'term_title' : 'title')}
        TRANSLATION
        %small.text-primary (#{language.full_name})

      #name-translation-container.clearfix
        -if translation.new_record?
          - if can_edit_language_glossary?(language.id)
            = render 'glossary_name_translations/form', language: language, glossary_name: item, glossary_name_translation: translation
          - else
            .col-xs-12
              Term not yet translated.
              %br/
              If you'd like to propose translation, please use Comments section below.
        - else
          = render 'translation', language: language, item: item, translation: translation

    - unless item.is_private?
      - translations = item.glossary_name_translations.except_language(language.id).includes([:language]).sort{|x,y| x.language.iso_code <=> y.language.iso_code}
      = render 'translations', language: language, item: item, translations: translations
