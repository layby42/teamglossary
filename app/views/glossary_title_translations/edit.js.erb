var cancel_translation_html = $("#title-translation-container").html();
$("#title-translation-container").html('<%=j render "form", language: @language, glossary_title: @glossary_title, glossary_title_translation: @glossary_title_translation %>');
$('#edit_title_translation_button').hide();
$('#cancel_title_translation_button').show();

$('#cancel_title_translation_edit').on('click', function(){
  $("#title-translation-container").html(cancel_translation_html);
  $('#edit_title_translation_button').show();
  $('#cancel_title_translation_button').hide();
});

$('#cancel_title_translation_button').on('click', function(){
  $("#title-translation-container").html(cancel_translation_html);
  $('#edit_title_translation_button').show();
  $('#cancel_title_translation_button').hide();
});
