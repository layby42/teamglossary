= form_for [language, glossary_name, glossary_name_translation], html: {class: 'form-horizontal well'} do |f|
  .form-group
    %h4 TERM TRANSLATION
    .col-sm-9.col-sm-offset-3
      .input-group
        = f.text_field :term, class: 'form-control', autocomplete: 'off', placeholder: 'Term Translation'
        .input-group-btn
          .button.btn.btn-default.btn-xs.rtl RTL

    %label.col-sm-3.control-label Alternative
    .col-sm-9
      .input-group
        = f.text_field :alt_term1, class: 'form-control', autocomplete: 'off', placeholder: 'Alternative Translation'
        .input-group-btn
          .button.btn.btn-default.btn-xs.rtl RTL

    %label.col-sm-3.control-label Alternative
    .col-sm-9
      .input-group
        = f.text_field :alt_term2, class: 'form-control', autocomplete: 'off', placeholder: 'Alternative Translation'
        .input-group-btn
          .button.btn.btn-default.btn-xs.rtl RTL

    %label.col-sm-3.control-label Alternative
    .col-sm-9
      .input-group
        = f.text_field :alt_term3, class: 'form-control', autocomplete: 'off', placeholder: 'Alternative Translation'
        .input-group-btn
          .button.btn.btn-default.btn-xs.rtl RTL

  .form-group
    %h4 NOTES
    .col-sm-12
      .input-group
        = f.text_area :notes, class: 'form-control', rows: 5, autocomplete: 'off', placeholder: 'Notes'
        .input-group-btn
          .button.btn.btn-default.btn-xs.rtl RTL

  .form-group
    %h4 STATUS
    %label.col-sm-3.control-label Integration
    .col-sm-9
      = f.select :integration_status_id, model_to_select(IntegrationStatus, glossary_name_translation.integration_status_id), {}, {class: 'form-control', autocomplete: 'off'}

  .form-group
    .col-sm-12.text-right
      - if glossary_name_translation.new_record?
        = link_to 'Cancel', root_path, class: 'btn btn-default'
      - else
        = link_to_empty 'Cancel', {class: 'btn btn-default', id: :cancel_term_translation_edit}
      = f.submit 'Save Changes', class: 'btn btn-primary'
