- content_for :breadcrumb do
  %ol.breadcrumb
    %li= link_to 'Glossary', root_path
    %li= link_to item.term, show_glossary_term_url_helper(language, item)

.row
  .col-xs-12.col-sm-12.col-md-10.col-lg-10.col-md-offset-1.col-lg-offset-1
    %h3= item.term

    .panel.panel-default
      .panel-body.special-border
        .row
          .col-sm-6.col-xs-12
            = render 'shared/term_show_term', language: language, item: item
          .col-sm-6.col-xs-12
            = render 'shared/term_show_translation', language: language, item: item


- if current_user && item.is_a?(GeneralMenu) && !item.folder?
  .row
    .col-xs-12.col-sm-12.col-md-10.col-lg-10.col-md-offset-1.col-lg-offset-1
      = render 'general_menu_actions/list', language: language, item: item, new_action: false
  %br/

- if current_user
  .row
    .col-xs-12.col-sm-12.col-md-10.col-lg-10.col-md-offset-1.col-lg-offset-1
      = render 'shared/term_comments', language: language, term: item
