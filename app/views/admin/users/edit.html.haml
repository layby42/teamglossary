- content_for :breadcrumb do
  %ol.breadcrumb
    %li= link_to 'Users', admin_users_path
    %li= link_to @user.name, admin_user_path(@user)
    %li= link_to 'Edit', edit_admin_user_path(@user)

%h3= @user.name

%ul.nav.nav-tabs
  = tab_for 'details' do
    = link_to 'Details', edit_admin_user_path(@user, tab: :details)
  = tab_for 'team' do
    = link_to edit_admin_user_path(@user, tab: :team) do
      Team
      %span.badge= @user.teams_count

#language_content.tab-content
  = render "admin/users/tabs/#{@tab}", user: @user
