- if flash[:error].present? || @user_session.errors.present?
  .alert.alert-info.alert-dismissible.text-center{role: 'alert'}
    %button.close{data: {dismiss: 'alert'}} &times;
    = flash[:error] || @user_session.errors.full_messages.first

%h2 Sign In

.well.bs-component
  = form_for @user_session, :url => login_path, :html => {:class => 'form-vertical'} do |f|

    %fieldset
      .form-group
        %label.control-label Email:
        = f.email_field :email, placeholder: 'Enter your Email', class: 'form-control', required: true
      .form-group
        %label.control-label Password:
        = f.password_field :password, placeholder: 'Enter your Password', class: 'form-control', required: true
      .form-group.remember-me
        = check_box_tag :remember_me, 'checked', true
        = label_tag :remember_me, 'Remember me'
      .form-group
        = f.submit 'Sign In', :class => 'btn btn-primary', :data => {:submit => true}

  .row.bottom-links
    = link_to 'Forgot your password?', new_password_reset_path
