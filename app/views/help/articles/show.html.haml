.row
  .col-xs-12.col-sm-12.col-md-10.col-lg-10.col-md-offset-1.col-lg-offset-1
    %h3
      = link_to help_articles_path do
        %i.fa.fa-angle-left
        #{@article.title}

      - if current_user.admin?
        .pull-right
          = render 'shared/edit_button', url: edit_help_article_path(@article), remote: false

    .panel.panel-default
      .panel-body
        .row
          .col-xs-12
            - if current_user.admin?
              - if @article.draft?
                %span.label.label-warning Article Not Published
                %br/
            = raw(@article.body)
