= render 'shared/term_alerts', language: language, term: item

.row-fluid
  .col-sm-6.col-xs-12
    - can_edit = can_edit_language_glossary?(item.language_id)

    - if can_edit
      - if request.xhr?
        = link_to edit_language_glossary_title_path(language, item), class: 'pull-right btn btn-primary btn-xs', id: :edit_title_button, remote: false, title: "Edit term" do
          %i.fa.fa-edit
          Edit
      - else
        .pull-left
          = render 'shared/changes_url', url: changes_language_glossary_title_path(language, item)

        = link_to edit_language_glossary_title_path(language, item), class: 'pull-right btn btn-primary btn-xs', id: :edit_title_button, remote: true, title: "Edit term" do
          %i.fa.fa-edit
          Edit
        = link_to 'javascript:void(0);', {class: 'pull-right btn btn-default btn-xs', id: :cancel_title_button, style: 'display: none;'} do
          %i.fa.fa-times
          Cancel

    %h4{class: (!request.xhr? && can_edit ? 'term_title' : 'title')} TEXT TITLE DETAILS

    #title-container.clearfix
      = render 'term', language: language, item: item

  .col-sm-6.col-xs-12
    - unless language.is_base_language?
      - translation = item.glossary_title_translations.by_language(language.id).first
      - translation ||= GlossaryTitleTranslation.new_with_defaults

      - can_edit = !translation.new_record? && can_edit_language_glossary?(language.id)
      - if can_edit
        - url = edit_language_glossary_title_glossary_title_translation_path(language, item, translation)
        - if request.xhr?
          = link_to url, class: 'pull-right btn btn-primary btn-xs', id: :edit_title_translation_button, remote: false, title: "Edit translation" do
            %i.fa.fa-edit
            Edit
        - else
          .pull-left
            = render 'shared/changes_url', url: changes_language_glossary_title_glossary_title_translation_path(language, item, translation)

          = link_to url, class: 'pull-right btn btn-primary btn-xs', id: :edit_title_translation_button, remote: true, title: "Edit translation" do
            %i.fa.fa-edit
            Edit
          = link_to 'javascript:void(0);', {class: 'pull-right btn btn-default btn-xs', id: :cancel_title_translation_button, style: 'display: none;'} do
            %i.fa.fa-times
            Cancel

      %h4{class: (!request.xhr? && can_edit ? 'term_title' : 'title')}
        TRANSLATION
        %small.text-primary (#{language.full_name})

      #title-translation-container.clearfix
        -if translation.new_record?
          - if can_edit_language_glossary?(language.id)
            = render 'glossary_title_translations/form', language: language, glossary_title: item, glossary_title_translation: translation
          - else
            .col-xs-12
              Term not yet translated.
              %br/
              If you'd like to propose translation, please use Comments section below.
        - else
          = render 'translation', language: language, item: item, translation: translation

    - unless item.is_private?
      - translations = item.glossary_title_translations.except_language(language.id).includes([:language]).sort{|x,y| x.language.iso_code <=> y.language.iso_code}
      = render 'translations', language: language, item: item, translations: translations
